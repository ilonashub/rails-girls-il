= wrap_layout :layout do
  
  %header
    .wrapper
      = partial(:logo)

      %nav
        %ul
          %li.has-dropdown
            = link_to t('getting-started'), guide_url('getting-started')
            %ul.dropdown
              %li= link_to t('installation-guide'), external_guide_url('install'), target: '_blank'
              %li= link_to t('tryruby-tutorial'), "http://tryruby.org", target: '_blank'

          %li.has-dropdown
            = link_to t('guides'), 'javascript://'
            %ul.dropdown
              %li= link_to t('app-guide'), guide_url('app')
              %li= link_to t('image-resizing-guide'), external_guide_url('thumbnails'), target: '_blank'
              %li= link_to t('design-guide'), guide_url('design')
              %li= link_to t('commenting-guide'), external_guide_url('commenting'), target: '_blank'
              %li= link_to t('heroku-guide'), external_guide_url('heroku'), target: '_blank'
              %li= link_to t('authentication-guide'), external_guide_url('devise'), target: '_blank'
              %li= link_to t('github-guide'), external_guide_url('github'), target: '_blank'

          %li= link_to t('contact'), localized_url('contact.html')

        /= link_to t('workshops'), localized_url('workshops')        

      .language-selector
        = link_to 'עב', "/", class: I18n.locale == :he ? 'active' : ''
        = link_to 'en', "/en", class: I18n.locale == :en ? 'active' : ''

  #content
    .wrapper.clearfix
      = yield

